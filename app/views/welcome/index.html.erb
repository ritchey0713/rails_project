<%= form_for current_user do |f| %>

  <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |msg| %>
      <%= msg %></br>
    <% end %>
  <% end %>

  What console do you play on?
  <%= f.text_field :console %></br>

  What is you desired skill rating?
  <%= f.number_field :goal %></br>

  <%= f.submit "Add to Account!" %>
<% end %>
