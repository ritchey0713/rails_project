<h1> Welcome back, <%= @user.name %> </h1>

<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>

<h3> Your current stats: </h3>
<h5>Preferred console: <%= @user.console %> </br>
Current score goal: <%= @user.goal %> </br> </h5>

<div class="ajaxForm">
</div>

<div class="gameList">
  <% @games.each do |g| %></br>
  <%= link_to g.name, edit_user_game_path(current_user, g), class: "js-userGameEdit" %></br>
  <%= g.score %></br>
  <% end %>
</div>

<%= link_to "Add a game", new_user_game_path(@user) %>
<%= link_to "Log out", logout_path %>
<%= link_to "All games", user_game_path(@user) %>
